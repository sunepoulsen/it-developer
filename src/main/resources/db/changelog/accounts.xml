<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="1" author="stp">
        <createSequence cycle="false"
                        incrementBy="50"
                        sequenceName="account_id_seq"
                        startValue="1"/>

        <createTable tableName="accounts">
            <column name="account_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="registrationsystem_id" type="bigint" />

            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="varchar(8192)" />
        </createTable>

        <addForeignKeyConstraint constraintName="fk_accounts_registrationsystem_id"
                                 baseTableName="accounts" referencedTableName="registrationsystems"
                                 baseColumnNames="registrationsystem_id" referencedColumnNames="registrationsystem_id"
        />
    </changeSet>

</databaseChangeLog>
